<div id="flat">
  <% flat = data.flats[owner] %>

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
  </div>

  <div class="container">

    <div class="profile">
      <div class="person">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "profile-user" %>
        <p> <%= "#{owner}" %></p>
      </div>
      <div class="flat-details">
        <h4><%= flat.description %></h4>
        <p><%= flat.city_name %></p>
      </div>
    </div>

    <div class="book_flat">
      <h4>Book this flat</h4>
      <form>
        <div class="form-row">
          <div class="col">
            <input type="text" class="form-control" placeholder="checkin">
          </div>
          <div class="col">
            <input type="text" class="form-control" placeholder="checkout">
          </div>
        </div>
        <div class="form-row">
          <select class="form-control" id="exampleFormControlSelect1">
            <option>1 guest</option>
            <option>2 guests</option>
            <option>3 guests</option>
            <option>4 guests</option>
            <option>5 guests</option>
          </select>
        </div>
        <div class="form-row">
          <input type="submit" class="form-control btn-primary"></input>
        </div>
      </form>
    </div>
  </div>

  <div class="about text-justify">
    <h4>About this flat</h4>
    <p>This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near cityÂ´s main Avenue.</p>
  </div>


</div>
